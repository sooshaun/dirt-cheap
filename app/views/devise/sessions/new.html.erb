<div class='loginbox'>
    
    <h2>Sign in</h2>
<div class="col-xs-4 col-xs-offset-4">
<%= image_tag("lock.png", :alt => "Lock logo", size: "200x200") %></div>
    
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%# f.label :username %><br />
          <span><%= fa_icon "user 1x " %>
          <%= f.text_field :username, placeholder: "Enter username", size: "40x20" %></span>
      </div>

       <div class="field"> 
        <%# f.label :email %><br />
          <span><%= fa_icon "envelope 1x " %>
          <%= f.email_field :email, placeholder: "Enter email", size: "40x20" ,autofocus: true %></span>
      </div>

      <div class="field">
        <%# f.label :password %><br />
          <span ><%= fa_icon "lock 1x" %>
          <%= f.password_field :password, placeholder: "Enter password", size: "40x20", autocomplete: "off" %></span>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Sign in", :class => "user_button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
