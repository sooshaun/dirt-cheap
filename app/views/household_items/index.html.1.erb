
<div class="container-fluid">  
  <div class="top-padding">   
      <div class="row">
        <div class="col-sm-6">
        <%# User login %>
            <div class="sign-in">
              <% if user_signed_in? %>
                <h6>Signed in as: <%= current_user.email %> | Signed in Username is :  <%= current_user.username %> | First name is :  <%= current_user.profile.first_name %></h6>
