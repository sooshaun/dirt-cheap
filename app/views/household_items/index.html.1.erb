                <h6><%= link_to "Already has an account ?", new_user_session_path%> <%= link_to 'Sign up', new_user_registration_path %></h6>
              <%end%>
            </div><%# Sign-in %>
        </div><%# col-sim-6 %>
        <div class="col-sm-6">
          <div class="search_align">
